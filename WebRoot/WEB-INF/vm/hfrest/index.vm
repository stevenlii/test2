<script type="text/javascript">
	jQuery(document).ready(function() {
	    var optStr="${opts}";
	    var opts=optStr.split(',');
	    jQuery('[code]').each(function () {
	        var code=$(this).attr("code");
	        for(var i=0;i<opts.length;i++){
			   if(code==opts[i]){
				   $(this).css('display','inline');
					}
	    		};
			});
	});
	
 	 function updateCache(){
 		   var flag = confirm("确认刷新资源层缓存吗？");
 	    	if (flag){
 	    		$.ajax({
 				    url : 'updateCache.do',
 				    type : 'POST',
 				    dataType: 'text',
 				    data : {
 				    },
 				    success : function(data){
 					  showSimpleTip(data);  
 					}
 	    		});
 	    	 }
 	   }
 	 
	  function showSimpleTip(result){
		  var msg = '操作失败';
		  if(result !='1') {
		  		if(result != '0'){
		  			msg = result;
		  		}
		  		$.omMessageBox.alert({
					  type:'error',
					  title : '操作提示',
					  content : msg
		  		});
		  }
		  else{
			  msg = '操作成功';
			  $.omMessageBox.alert({
				  type:'success',
				  title : '操作提示',
				  content : msg
			  });
		  }
		  
	  }
 	 
</script>

