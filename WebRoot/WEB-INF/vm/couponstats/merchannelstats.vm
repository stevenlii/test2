    <script src="$request.contextPath/js/ui/js/om-messagebox.js"></script>
    <script src="$request.contextPath/js/ui/js/om-button.js"></script>
    <script src="$request.contextPath/js/ui/js/om-validate.js"></script>
    <script src="$request.contextPath/js/ui/js/om-calendar.js"></script>
    <script src="$request.contextPath/js/ui/js/om-ajaxsubmit.js"></script>
    <script src="$request.contextPath/js/busi/couponstats.js"></script>
 	<script type="text/javascript">

        jQuery(document).ready(function() {
        	jQuery( "#dialog-modal").omDialog({
    			autoOpen: false,
    			height: 80,
				resizable: false,
    			modal: true
    		});
          	jQuery('#grid').omGrid({
                dataSource : "$request.contextPath/couponstats/merChannelStats.do?queryKey=stats.merChannelStats",
                width:'100%',
                height : 460,
                limit : 15,
				title : '统 计 信 息 列 表',
				errorMsg : '取数据出错',
				loadingMsg : '正在加载数据, 请稍后...',
				emptyMsg : '没有数据',
                autoFit : true,
                colModel : [ 
                	 {header : '日期(日/月)', name : 'MD',width : 70, align : 'center'}, 
                	 {header : '渠道编号', name : 'CHANNELID',width : 60, align : 'center'}, 
                     {header : '渠道名称', name : 'CHANNELNAME',width : 100, align : 'center' },
    				 {header : '商户编号', name : 'MERID',width : 60, align : 'center'}, 
                     {header : '商户名称', name : 'MERNAME',width : 100, align : 'center' },
                     {header : '商品编号', name : 'GOODSID',width : 60, align : 'center'}, 
                     {header : '商品名称', name : 'GOODSNAME',width : 180, align : 'center' },
                     {header : '售出数量', name : 'SALEDNUM', width : 50, align : 'center' },
                     {header : '售出总金额 (元)', name : 'SALEDSUM', width : 90, align : 'right',
							 renderer: function(value, rowData, rowIndex) {
        							 var val = rowData.SALEDSUM + "";
        							 var index = val.indexOf(".");
        							 if(index > 0){
        							 	var sub = val.substring(index + 1);
        								if(sub.length < 2){
        									return val + "0&nbsp;&nbsp;";
        								}
        							 	return val + "&nbsp;&nbsp;";
        							 }
        							 return rowData.SALEDSUM + ".00&nbsp;&nbsp;";
        		                }
	                 }
                ]
            });
            $('#channel').omCombo({
                dataSource: '$request.contextPath/option/channelinflist.do',
	            width: '155px',
	            emptyText: '全部',
	            onValueChange: function(target, newValue, oldValue, event) {
					var channel = $('#channel').omCombo('value');
	                // 连级更新商户列表
	                $('#type').omCombo('setData', []);
	                $('#goodstype').omCombo('setData', []);
					$('#type').omCombo({
	                    dataSource : '$request.contextPath/option/channelmerinflist.do?channelId=' + channel
	                });
	            },
				forceSelection: true,
				onSuccess:function(data, textStatus, event){
			      	  var tmp = $.parseJSON('{"value":"","text":"全部"}');
			      	  data.unshift(tmp);
		   		}
            });
			 $('#type').omCombo({
                //dataSource: '$request.contextPath/option/couponmerinflist.do',
                dataSource: [],
	            width: '155px',
	            emptyText: '全部',
	            onValueChange: function(target, newValue, oldValue, event) {
					var merId = $('#type').omCombo('value');
					var channel = $('#channel').omCombo('value');
	                // 连级更新商品列表
	                $('#goodstype').omCombo('setData', []);
					$('#goodstype').omCombo({
	                    dataSource : '$request.contextPath/option/channelmergoodsinflist.do?merId=' + merId + '&channelId=' + channel
	                });
	            },
	            forceSelection: true,
	            onSuccess:function(data, textStatus, event){
			      	  var tmp = $.parseJSON('{"value":"","text":"全部"}');
			      	  data.unshift(tmp);
		   		}
            });
            $('#goodstype').omCombo({
                dataSource: [],
	            width: '155px',
	            emptyText: '全部',
				forceSelection: true,
				onSuccess:function(data, textStatus, event){
			      	  var tmp = $.parseJSON('{"value":"","text":"全部"}');
			      	  data.unshift(tmp);
		   		}
            });
            
			$('#startDate').omCalendar({
				dateFormat:'yy-mm-dd',
				maxDate: new Date(),
				onSelect : function(date,event) {
					var d = new Date(date);
					d.setDate(d.getDate()-1);
					$('#endDate').omCalendar({minDate : d});
				}
			});
			$('#endDate').omCalendar({
				dateFormat:'yy-mm-dd',
				maxDate: new Date(),
				onSelect : function(date,event) {
					$('#startDate').omCalendar({maxDate : date});
				}
			});
       });
		function setFormat(type){
			$('#startDate').val('');
			$('#endDate').val('');
			if(type == 1){
				$('#startDate').omCalendar("option", "dateFormat", "yy-mm");
				$('#endDate').omCalendar("option", "dateFormat", "yy-mm");
			}else{
				$('#startDate').omCalendar("option", "dateFormat", "yy-mm-dd");
				$('#endDate').omCalendar("option", "dateFormat", "yy-mm-dd");
			}
		}
</script>

</head>
<body>
 <!--列表查询区-->
 <div  id="search_div">
   <div class="list_search" style="height:80px;">
     <table width="100%" border="0">
	   <tr>
	    <td>
	      <form id="form" action="" method="post"> 
			<table width="100%" border="0">
              <tr height="50">
              	<th width="5%">渠道：</th>
                <td width="13%"><input id="channel" name="channel"/></td>
                <th width="5%">商户：</th>
                <td width="13%"><input id="type" name="type"/></td>
                <th width="10%">商品：</th>
	            <td><input id="goodstype" name="goodstype"/></td>
	          </tr>
	          <tr>
               	<th width="10%">统计类型：</th>
                <td width="17%">
					<input id="radio1" name="statsType" class="radio" value="day" onclick="setFormat(0);" type="radio" checked/>&nbsp;按日统计&nbsp;&nbsp;
            		<input id="radio2" name="statsType" type="radio" class="radio"  value="month" onclick="setFormat(1);"/>&nbsp;按月统计
				</td>
    		   	<th width="13%">统计时间：</th>
                <td colspan="3">
					<input id="startDate" style="width:90px" name="startDate"/>&nbsp;至&nbsp;
					<input id="endDate" style="width:90px" name="endDate"/>
				</td>
             </tr>
            </table>
	         </form> 
	       </td>
	        <td>
				<input title="查询" name="query" type="image" code="001"  src="${request.contextPath}/profile/default/images/Search_bnt.png" onclick="doQuery('merChannelStats.do?queryKey=stats.merChannelStats');"/>
				<input code="002" type="image" value="导出" src="${request.contextPath}/profile/default/images/btn_Export.png" onclick="doExport('expMerChannelReport.do?queryKey=stats.merChannelStats');"/>
	        </td>
	       </tr>
        </table>
</div>    
    </div>			      
 <!--列表区-->
  <div align="center">
       <table id="grid" align="left"></table>
