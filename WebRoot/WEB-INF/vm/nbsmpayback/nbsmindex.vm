        jQuery(document).ready(function() {
			jQuery( "#dialog-modal").omDialog({
    			autoOpen: false,
    			height: 80,
    			resizable: false,
    			modal: true
    		});
          	jQuery('#grid').omGrid({
                dataSource : "$request.contextPath/nbsmpayback/queryNBSM.do?queryKey=nbsmpayback.nbsmdetail",
                width:'100%',
                height : 240,
                limit : 15, 
				errorMsg : '取数据出错',
				loadingMsg : '正在加载数据, 请稍后...',
				emptyMsg : '没有数据',
                autoFit : true,
                colModel : [ 
					 {header : '日期', name : 'STLDATE',width : 70, align : 'center'},
    				 {header : '上行短信笔数', name : 'MONUM',width : 100, align : 'center'}, 
                     {header : '下行短信笔数', name : 'MTNUM',width : 100, align : 'center'},
                     {header : '不均衡短信笔数', name : 'NBSMNUM', width : 100 , align : 'center'}
                ]
            });
			$('#startDate').omCalendar({
				dateFormat:'yy-mm-dd',
				maxDate: new Date(),
				onSelect : function(date,event) {
					var d = new Date(date);
					d.setDate(d.getDate()-1);
					$('#endDate').omCalendar({minDate : d});
				}
			});
			$('#endDate').omCalendar({
				dateFormat:'yy-mm-dd',
				maxDate: new Date(),
				onSelect : function(date,event) {
					$('#startDate').omCalendar({maxDate : date});
				}
			});
       });
</script>
