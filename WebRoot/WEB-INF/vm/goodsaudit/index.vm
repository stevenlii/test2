        //审核类型列表
        $('#auditType').omCombo({
            dataSource : [{"value":"","text":"全部"},{"value":"1","text":"新增"},{"value":"2","text":"修改"}
            				,{"value":"3","text":"启用"},{"value":"4","text":"禁用"}],
            width:'100px',
            emptyText:'全部 ',
            forceSelection : true
        });
        //审核状态列表
        $('#state').omCombo({
            dataSource : [{"value":"","text":"全部"},{"value":"0","text":"待审核"}
