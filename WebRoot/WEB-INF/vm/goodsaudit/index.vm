                     			result+="<input name='不通过' title='不通过' type='image' src='${request.contextPath}/profile/default/images/tool_nopass1.png' />&nbsp;";
                     		}
	                 	}
	                 	result+="<input id='detail' name='detail' type='image' title='详细' src='${request.contextPath}/profile/default/images/tool_details.png' onclick='show(&quot;" + id + "&quot;, " + auditType + "," + state + ","+rowData.SERVTYPE+")' />";
                     	return result;
	                }
             }}],
             autoFit : true

        });
        
        
        //获取提交人列表
        $('#creator').omCombo({
