	span.pPageSize {
		display : none;
	}
</style>

<script type="text/javascript">
 	  var  url="$request.contextPath/xerevoke/bjhbqueryDownload.do";
        jQuery(document).ready(function() {

          jQuery('#grid').omGrid({
                dataSource : url,
                width:'100%',
                height : 455,
                limit : 5000,
                autoFit : true,
                colModel : [ {header : '文件名称', name : 'DOCNAME', width : 80, align : 'left', renderer : function(value , rowData , rowIndex){
     							return "<a title='"+value+"'>"+value+"</a>";
     						 }},
     				         {header : '操作', name:'OPER',width : 80, align : 'left',renderer:function(value , rowData , rowIndex){
				     				var fileName = rowData.DOCNAME;
	                     	    return " <input name='下载' title='下载' type='image' src='${request.contextPath}/profile/default/images/down.png' onclick='bjhbdownloadDoc(&quot;"+fileName+"&quot;)'/> ";	
                             }}
                            ]
            });
          
       });
        
        function bjhbqueryDownload(){
        	$('#grid').omGrid("setData", url);
        }
        
        function bjhbdownloadDoc(fileName){
        	window.location.href="bjhbdownloadDoc.do?fileName="+fileName;
        }

</script>
